<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/game/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/signalr")
    <script src="~/signalr/hubs"></script>
    @Scripts.Render("~/game/logic")
</head>
<body>
    <div class="navbar navbar-inverse" style="background-color: rgb(49, 36, 80)">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tofu Universe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="background-color: rgb(49, 36, 80)">
                <ul class="nav navbar-nav" style="background-color: rgb(49, 36, 80)">
                    <li>@Html.ActionLink("Premium Shop", "Shop", "Shop")</li>
                    <li>@Html.ActionLink("Forum", "Home", "Forum")</li>
                    <li><a href="/User/LogOut">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
