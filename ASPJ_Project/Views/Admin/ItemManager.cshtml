
@{
    ViewBag.Title = "Transaction";
    var Listy = ViewBag.Listy;
    Layout = "~/Content/ShopStyle/_Layout.cshtml";

}

<<h2>Item Management</h2>

<table>
    <tr>
        <td>Item ID:</td>
        <td>Item Name:</td>
        <td>Item Type:</td>
        <td>Item Description:</td>
        <td>Item Price:</td>
        <td colspan="2">Options</td>
        @* Date Time? wtf  *@
    </tr>
    @foreach (var dummy in Listy)
    {
    <tr>
        <td>@dummy.itemID</td>
        <td>@dummy.itemName</td>
        <td>@dummy.itemType</td>
        <td>@dummy.itemDescription</td>
        <td>@dummy.beansPrice</td>
        <td>@Html.ActionLink("edit", "ItemEdit", "Admin",new { name = @dummy.itemName},null)</td>
        <td>@Html.ActionLink("delete", "ItemDelete", "Admin", new { name = @dummy.itemName},null)</td>
    </tr>
    }
</table>

@Html.ActionLink("Add Item", "ItemAdd", "Admin")