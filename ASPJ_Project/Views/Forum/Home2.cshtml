@model IEnumerable<ASPJ_Project.Models.Thread>

@{
    ViewBag.Title = "Home2";
    Layout = "~/Views/Forum/_Forumlayout.cshtml";
}

<h2>Home2</h2>

<p>
    @Html.ActionLink("Create New", "CreateThread")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Votes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Votes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ThreadID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ThreadID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ThreadID })
        </td>
    </tr>
}

</table>
