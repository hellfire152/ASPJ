@{
    ViewBag.Title = "SuccessView";
    Layout = "~/Content/ShopStyle/_Layout.cshtml";
}

<html>
	<head>
        <style>
            .features{
                overflow-y: scroll;
            }
        </style>
		<title></title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
	</head>
	<body>
		<!-- Sidebar -->
			<section id="sidebar">
				<div class="inner">
					<nav>
						<ul>
							<li><a href="/User/UserProfile">@Session["username"]</a></li>
                            <li><a>Beans: @Session["userBeans"]</a></li>
							<li><a href="/Shop/Shop">Shop</a></li>
                            <li><a href="/Shop/Inventory">Inventory</a></li>
                            <li><a href="/Shop/BeansPurchase">Purchase Beans</a></li>
						</ul>
					</nav>
				</div>
			</section>

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Intro -->
					<section id="intro" class="wrapper style1 fullscreen fade-up">
						<div class="inner">
							<h1>Successful Purchase</h1>
							<p>@Session["beansAmount"] Beans will be added to your account once we have confirmed your payment.</p>
							<ul class="actions">
								<li><a href="/Game/Index" class="button scrolly">Play Now</a></li>
                                <li><a href="/Shop/Shop" class="button scrolly">Shop Now</a></li>
							</ul>
						</div>
					</section>

			</div>

		<!-- Footer -->
			<footer id="footer" class="wrapper style1-alt">
				<div class="inner">
					<ul class="menu">
						<li>&copy; Tofu Universe All rights reserved.</li>
					</ul>
				</div>
			</footer>
        </body>
    </html>