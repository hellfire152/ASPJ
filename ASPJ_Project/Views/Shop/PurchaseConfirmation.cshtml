@{
    ViewBag.Title = "Shop";
    Layout = "~/Content/ShopStyle/_Layout.cshtml";
}
<html>
	<head>
        <style>
            input {
                color: #000000
            }
        </style>
		<title></title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
	</head>
	<body>
    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
    {
        if (ViewBag.Message != null)
        {
            <div class ="alert alert-success">
                <strong> Success! </strong> @ViewBag.Message
            </div>
        }
        else{
		<!-- Sidebar -->
			<section id="sidebar">
				<div class="inner">
					<nav>
						<ul>
							<li><a href="/Shop/Shop">Hats</a></li>
							<li><a href="/Shop/Shop">Outfits</a></li>
							<li><a href="/Shop/Shop">Backgrounds</a></li>
                            <li><a>Beans: </a></li>
                            <li><a href="/Shop/BeansPurchase">Purchase Beans</a></li>
                            <li><a href="#">Shopping Cart</a></li>
						</ul>
					</nav>
				</div>
			</section>

		<!-- Wrapper -->
			<div id="wrapper">
                <!-- Hats -->
					<section id="one" class="wrapper style3 fade-up">
						<div class="inner">
							<h2>@ViewData["beansName"] (@ViewData["beansAmount"] Beans)</h2>
							<p>$@ViewData["price"]</p>
							<div class="features">
								<section>
                                    <p>@Html.ActionLink("Pay Direct With Credit Card", "CreditCardInfo", "Shop")</p>
                               
                                    <p>@Html.ActionLink("Pay with PayPal", "PaymentWithPaypal", "Shop")</p>
								</section>
							</div>
							<ul class="actions">
								<li><a href="/Shop/BeansPurchase" class="button">Go Back</a></li>
							</ul>
						</div>
					</section>

			</div>
        }
        if(ViewBag.MEssage != null)
        {
            <div class="alert alert-danger">
                <strong>Error!</strong>@ViewBag.MEssage
            </div>
        }
		<!-- Footer -->
			<footer id="footer" class="wrapper style1-alt">
				<div class="inner">
					<ul class="menu">
						<li>&copy; Tofu Universe All rights reserved.</li>
					</ul>
				</div>
			</footer>
        </body>
    </html>