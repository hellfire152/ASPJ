@model ASPJ_Project.Models.OTP

@{
    ViewBag.Title = "One more step... Please check your phone number for the OTP to proceed.";
}

<h4>One more step... Please check your phone number for the OTP to proceed.</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

   

    @Session["UserID"].ToString();
    @Session["Phonenumber"].ToString();
    <h4>One more step... Please check your phone number for the OTP to proceed.</h4>

    <div class="form-horizontal">
        <h4>OTP</h4>
        <hr />

        @ViewBag.Message

        <hr/>
        <input type="submit" name="response" value="Send OTP" formaction=@Url.Action("SendOTP", "SMS") formmethod="post" class="btn btn-default" />
       

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OTPvalue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OTPvalue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OTPvalue, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="submit" name="response" value="Submit" formaction=@Url.Action("VerifyOTP", "VerifyOTP") formmethod="get" class="btn btn-default" />
     
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
