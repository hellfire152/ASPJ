@using ASPJ_Project.Models;
@model SearchModel

@{
    ViewBag.Title = "Search";
    var Dummys = ViewBag.Dummys;
    Layout = "~/Content/ShopStyle/_Layout.cshtml";

}

<h2>Search</h2>

@using (Html.BeginForm("Search", "Admin", FormMethod.Post))
{
   
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Search, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Search, new { @class = "form-control" })
            </div>
        </div>

        <input type="submit" value="search" />
}


<table>
    <tr>
        <td>UserID</td>
        <td>UserName</td>
        <td>FirstName</td>
        <td>Role</td>
        <td>Email</td>
        <td>Options</td>
    </tr>
    @foreach (var dummy in Dummys)
    {
        <tr>
            <td>@dummy.userID</td>
            <td>@dummy.userName</td>
            <td>@dummy.firstName</td>
            <td>@dummy.role</td>
            <td>@dummy.email</td>
            <td>@Html.ActionLink("UserProfile", "UserProfile", new{ username = @dummy.userName})</td>
        </tr>
    }
</table>