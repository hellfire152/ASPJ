@{
    ViewBag.Title = "Index";
    Layout = "~/Content/ShopStyle/_Layout.cshtml";
}
<html>
	<head>
        <style>
            h3{
                font-size: 22px;
            }
            .description{
                font-size: 18px;
            }
            .beansPrice{
                font-size: 20px;
            }
            img{
                height: 6%;
                width: 3%;
            }
        </style>
		<title></title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
        <script>
        </script>
	</head>
	<body>
		<!-- Sidebar -->
        <section id="sidebar">
        @if (@Session["userID"] == null)
        {
				<div class="inner">
					<nav>
						<ul>
							<li><a href="/User/Login">Login</a></li>
							<li><a href="/User/Registration">Register</a></li>
						</ul>
					</nav>
				</div>
        }
        else if(@Session["userID"] != null)
        {
				<div class="inner">
					<nav>
						<ul>
							<li><a href="/User/UserProfile">@Session["username"]</a></li>
                            <li><a>Beans: @Session["userBeans"]</a></li>
                            <li><a href="/Game/Index">Play</a></li>
							<li><a href="#one">Hats</a></li>
							<li><a href="#two">Outfits</a></li>
                            <li><a href="/Shop/Inventory">Inventory</a></li>
                            <li><a href="/Shop/BeansPurchase">Purchase Beans</a></li>
                            <li><a href="/Forum/Home">Forum</a></li>
                            <li><a href="/User/LogOut">Logout</a></li>
						</ul>
					</nav>
				</div>
        }
        </section>
		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Intro -->
					<section id="intro" class="wrapper style1 fullscreen fade-up">
						<div class="inner">
							<h1>T<img src="../../Content/Images/tofu-clipart-cute-2.png" />fu Universe</h1>
							<p>It's time, time to tofu.</p>
							@if (@Session["userID"] != null)
                            {
                            <ul class="actions">       
								<li><a href="/Game/Index" class="button scrolly">Play Now</a></li>
							</ul>
                            }
                            else if (@Session["userID"] == null)
                            {
                            <ul class="actions">        
                                <li><a href="/User/Login" class="button scrolly">Login</a></li>
								<li><a href="/User/Registration" class="button scrolly">Register</a></li>
							</ul>
                            }
						</div>
					</section>

                <!-- Hats -->
					<section id="one" class="wrapper style3 fade-up">
						<div class="inner">
                            <h2>About Us</h2>
							<div class="features">
								<section>
                                    <span class="icon major fa-info-circle"></span>
                                    <p>Welcome to Tofu Universe! We are a group of students who are striving to create a fun and secure gaming application!</p>
                                </section>
							</div>
						</div>
					</section>

				
					<section id="two" class="wrapper style3 fade-up">
						<div class="inner">
                            <h2>Our Team</h2>
							<div class="features">
						        <section>
                                    <span class="icon major fa-user"></span>
                                    <h4>John Foo Heng Wei</h4>
                               </section>
                                <section>
                                    <span class="icon major fa-user"></span>
                                    <h4>Solomon Tay Chong</h4>
                               </section>
                                <section>
                                    <span class="icon major fa-user"></span>
                                    <h4>Ang Jin Kuan</h4>
                               </section>
                                <section>
                                    <span class="icon major fa-user"></span>
                                    <h4>Scott Tan Jun Wei</h4>
                               </section>
                                <section>
                                    <span class="icon major fa-user"></span>
                                    <h4>Alex Ang Wee Yi</h4>
                               </section>
                                <section>
                                    <span class="icon major fa-user"></span>
                                    <h4>Eunice Chiang Yi-En</h4>
                               </section>
							</div>
						</div>
					</section>

			</div>

		<!-- Footer -->
			<footer id="footer" class="wrapper style1-alt">
				<div class="inner">
					<ul class="menu">
						<li>&copy; Tofu Universe All rights reserved.</li>
					</ul>
				</div>
			</footer>
        </body>
    </html>