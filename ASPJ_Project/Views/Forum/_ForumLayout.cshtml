<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        th, td {
            color: white
        }
        h1, h2, h3 , h4 , h5, dt, dd, label{
            color: white
        }
        body {
            background-color: #5e42a6;
        }
        p {
            color:white;
        }
       a {
           color: rgb(183, 78, 145);
       }
    </style>
    <link rel="stylesheet" type="text/css" href="~/css/Forum.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: rgb(49, 36, 80)">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tofu Universe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="background-color: rgb(49, 36, 80)">
                <ul class="nav navbar-nav" style="background-color: rgb(49, 36, 80)">
                    <li>@Html.ActionLink("Game", "Index", "Game")</li>
                    <li>@Html.ActionLink("Premium Shop", "Shop", "Shop")</li>
                    <li>@Html.ActionLink("Forum", "Home", "Forum")</li>
                    <li>@Html.ActionLink("My threads","MyThreads","Forum")</li>
                    <li>@Html.ActionLink("My comments", "MyComments", "Forum")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
