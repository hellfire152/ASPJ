@model ASPJ_Project.Models.OTP

@{
    ViewBag.Title = "One more step... ";
    Layout = "~/Content/Login/_Layout.cshtml";
}


<body>
     <div class="limiter">
		<div class="container-login100" style="background-image: url('Content/Login/images/bg-01.jpg');">
			<div class="wrap-login100">



                @using (Html.BeginForm()) 
                {
                    @Html.AntiForgeryToken()

   

                     <form class="login100-form validate-form">
					 <span class="login100-form-title p-b-34 p-t-27">Hello, </span>
					<span class="login100-form-title p-b-34 p-t-27">@Session["uname"].ToString()</span>
					
                    <hr/>
                    <br />
                    <br />
                        
                    <h5>Please click on "Send OTP". </h5>
                    <h5>Please check your phone number for the OTP to proceed.</h5>

                    <h5> Contact us at dubuuniverse@gmail.com if you've any issues.</h5>
    
                   <br />
                    <br />
                    <div class="form-horizontal">
        
                       

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.OTPvalue, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="wrap-input100 validate-input" data-validate = "Enter username">
                    
                                @Html.EditorFor(model => model.OTPvalue, new { htmlAttributes = new { @class = "form-control, input100" } })
                                 <span class="focus-input100"></span>
                                <br /> 
                                @Html.ValidationMessageFor(model => model.OTPvalue, "", new { @class = "text-danger" })
                            </div>
                        </div>


                  
                        <input type="submit" name="response" value="Send OTP" formaction="/SMS/SendOTP" formmethod="post" class="login100-form-btn" />
                        <br />
                        <input type="submit" name="response" value="Submit" formaction="/VerifyOTP/VerifyOTP" formmethod="get" class="login100-form-btn" />
                   
                </div>
                </form>
                }

                <div>
                    @Html.ActionLink("Login", "User") 
   
                    @Html.ActionLink("Registration", "User")
                </div>
            </div>
       </div>
   </div>
</body>